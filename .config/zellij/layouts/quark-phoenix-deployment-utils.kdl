layout cwd="$HOME/Projects/quark/quark-phoenix-deployment-utils/" {
  default_tab_template {
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
    children
  }
  new_tab_template {
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
    pane
  }
  tab {
    pane command="nvim" start_suspended=true
  }
}
