layout cwd="$XDG_PROJECT_HOME/quark" {
  default_tab_template {
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
    children
  }
  new_tab_template {
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
    pane
  }
  tab name="/quark" focus=true hide_floating_panes=true {
    pane focus=true
  }
}
