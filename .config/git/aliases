# to include these aliases in your existing .gitconfig add:
# [include]
#   path = .gitconfig_alias

[alias]
  s       = status
  a       = add .
  c       = commit
  co      = checkout
  lo      = log --oneline
  ca      = commit --amend --no-edit
  pf      = push --force-with-lease
  ds      = diff --staged
  cb      = checkout -b
  shove   = push -u origin HEAD
  fa      = fetch --all
  cc      = "!f() { git fetch origin $1 && git checkout -f -B $1 origin/$1; }; f"
  ccm     = cc main
  ccma    = cc master
  cbs     = "!f() { git checkout -b $1 && git shove ; }; f" 
  prunec  = !git fetch --prune && git prune -v
  fu      = "!f() { git commit --fixup $1 && git rebase -i --autosquash $1~; }; f"
  foco    = "!f() { git fetch origin $1 && git checkout $1; }; f"
  tci     = "!git commit --allow-empty -m 'trigger ci'"
  cfglist = config --global --list --includes
