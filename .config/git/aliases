# to include these aliases in your existing .gitconfig add:
# [include]
#   path = .gitconfig_alias

[alias]
  s       = status
  a       = add .
  c       = commit -m
  gc      = !git add . && git commit -m
  sw      = switch
  lo      = log --oneline
  ca      = commit --amend --no-edit
  pf      = push --force-with-lease
  ds      = diff --staged
  swc     = switch -c
  shove   = push -u origin HEAD
  fa      = fetch --all
  cc      = "!f() { git fetch origin $1 && git switch -f -B $1 origin/$1; }; f"
  ccm     = cc main
  ccma    = cc master
  cbs     = "!f() { git switch -c $1 && git shove ; }; f" 
  rp      = rev-parse HEAD
  rps     = rev-parse --short HEAD
  prunec  = !git fetch --prune && git prune -v
  fu      = "!f() { git commit --fixup $1 && git rebase -i --autosquash $1~; }; f"
  foco    = "!f() { git fetch origin $1 && git switch $1; }; f"
  tci     = "!git commit --allow-empty -m 'trigger ci'"
  cfglist = config --global --list --includes
