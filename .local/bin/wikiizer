#!/usr/bin/env bash
wiki_path="~/.vimwiki/"
selected_name=$(basename "$wiki_path" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $wiki_path
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $wiki_path
fi

tmux new-window -t '=_vimwiki' -n 'vimwiki'
tmux set-option -t '=_vimwiki:=vimwiki' status off
tmux send-keys -t '=_vimwiki:=vimwiki' 'nvim -c VimwikiIndex' C-m

